@page "/clientes/registro"
@using AmitdPres.Modelos
@using AmitdPrestamo.BLL
@rendermode InteractiveServer
@inject ClientesBLL clienteBll

<EditForm Model="Cliente" FormName="RegistroClientes" OnValidSubmit="Guardar">
<div class="card">
    <div class="card-header">
        <h3 class="text-center">Registro de clientes</h3>
    </div>

        <div class="card-body">
        <div class="row">
            <div class="col-md-5">
                <label class="form-label">Nombre</label>
                <InputText @bind-Value=Cliente.Nombre class="form-control"/>
            </div>
            <div class="col-md-5">
                <label class="form-label">Apellido</label>
                <InputText @bind-Value=Cliente.Apellido class="form-control" />
            </div>
                <div class="col-md-5">
                    <label class="form-label">Apodo</label>
                    <InputText @bind-Value=Cliente.Apodo class="form-control" />
                </div>
                <div class="col-md-5">
                    <label class="form-label">Cedula</label>
                    <InputText @bind-Value=Cliente.Cedula class="form-control" />
                </div>
                <div class="col-md-5">
                    <label class="form-label">Telefono</label>
                    <InputText @bind-Value=Cliente.Telefono class="form-control" />
                </div>
                <div class="col-md-5">
                    <label class="form-label">Celular</label>
                    <InputText @bind-Value=Cliente.Celular class="form-control" />
                </div>
                <div class="col-md-5">
                    <label class="form-label">Ocupacion</label>
                    <InputText @bind-Value=Cliente.Ocupacion class="form-control" />
                </div>
                <div class="col-md-5">
                    <label class="form-label">Sexo</label>
                    <InputText @bind-Value=Cliente.Sexo class="form-control" />
                </div>
                <div class="col-md-5">
                    <label class="form-label">Fecha de Nacimiento</label>
                    <InputDate @bind-Value=Cliente.FechaNacimiento class="form-control" />
                </div>
                <div class="col-md-5">
                    <label class="form-label">Direcion</label>
                    <InputText @bind-Value=Cliente.Direccion class="form-control" />
                </div>
                <div class="col-md-5">
                    <label class="form-label">Direcion</label>
                    <InputText @bind-Value=Cliente.Direccion class="form-control" />
                </div>
                <div class="col-md-5">
                    <label class="form-label">Direcion</label>
                    <InputText @bind-Value=Cliente.Direccion class="form-control" />
                </div>
        </div>
    </div>
        
        <div class="card-footer text-center">
            <button type="button" class="btn btn-primary text-center">Guardar</button>
            <button type="button" class="btn btn-primary text-center">Limpiar</button>
            <button type="button" class="btn btn-primary text-center">Cerrar</button>
      
        </div>
   
</div>

</EditForm>

@code {
    public Cliente Cliente { get; set; } = new Cliente();

    void Guardar()
    {
        if (clienteBll.Insertar(Cliente))
        {
            Console.WriteLine("Guardado exitoso");
        }
    }

}
